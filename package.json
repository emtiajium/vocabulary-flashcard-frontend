{
    "name": "vocabulary-flashcard-frontend",
    "version": "4.0.2",
    "private": true,
    "description": "Build your own dictionary, create flashcards, memorize vocabularies",
    "scripts": {
        "create:capacitor.config": "node -r fs -e \"fs.copyFileSync('capacitor.config.json.text', 'capacitor.config.json', fs.constants.COPYFILE_EXCL)\" && prettier --write \"capacitor.config.json\"",
        "create:config": "node -r fs -e \"fs.copyFileSync('config.json.text', 'config.json', fs.constants.COPYFILE_EXCL)\" && prettier --write \"config.json\"",
        "serve": "vue-cli-service serve --port 8090",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint --fix",
        "lint:check": "vue-cli-service lint",
        "format": "prettier --write \"public/*.html\" \"src/**/*.{css,ts,vue}\" \"*.md\" \"*.js\" \"*.json\" \"**/**/*.yml\"",
        "format:check": "prettier --check \"public/*.html\" \"src/**/*.{css,ts,vue}\" \"*.md\" \"*.js\" \"*.json\" \"**/**/*.yml\"",
        "ci": "npm run format:check && npm run lint:check && npm run build",
        "serve:android:anew": "rm -rf android/ && ionic build --prod --release && npx cap add android && npx cap sync android",
        "serve:android:anew:prod": "node cloud-server.js && node server-validator-before-release.js && npm run serve:android:anew && node local-server.js",
        "deploy:firebase": "node cloud-server.js && node server-validator-before-release.js && npm run build && firebase deploy --only hosting && node local-server.js",
        "replace-generated-android-files": "bash ./replace-generated-android-files.sh",
        "android-pre-bundle": "npm run serve:android:anew:prod && npm run replace-generated-android-files",
        "android-pre-bundle:local": "npm run serve:android:anew && npm run replace-generated-android-files"
    },
    "dependencies": {
        "@capacitor/android": "^6.0.0",
        "@capacitor/app": "^6.0.0",
        "@capacitor/core": "^6.0.0",
        "@capacitor/device": "^6.0.0",
        "@capacitor/status-bar": "^6.0.0",
        "@capawesome/capacitor-android-edge-to-edge-support": "^7.2.2",
        "@codetrix-studio/capacitor-google-auth": "3.0.1",
        "@fortawesome/fontawesome-svg-core": "^6.1.1",
        "@fortawesome/free-brands-svg-icons": "^6.1.1",
        "@fortawesome/free-regular-svg-icons": "^6.1.1",
        "@fortawesome/free-solid-svg-icons": "^6.1.1",
        "@fortawesome/vue-fontawesome": "^3.0.0-5",
        "@ionic-native/core": "^5.34.0",
        "@ionic-native/theme-detection": "^5.34.0",
        "@ionic/core": "^8.6.3",
        "@ionic/storage": "^3.0.4",
        "@ionic/vue": "^8.6.3",
        "@ionic/vue-router": "^8.6.3",
        "axios": "1.8.2",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.14.0",
        "cordova-plugin-theme-detection": "^1.3.0",
        "cordova-sqlite-storage": "^6.0.0",
        "core-js": "^3.6.5",
        "date-fns": "^3.6.0",
        "google-auth-library": "^8.7.0",
        "iterare": "^1.2.1",
        "localforage-cordovasqlitedriver": "^1.8.0",
        "lodash": "^4.17.21",
        "reflect-metadata": "^0.1.13",
        "swiper": "^11.1.3",
        "uuid": "^8.3.2",
        "vue": "^3.4.27",
        "vue-router": "^4.3.2"
    },
    "devDependencies": {
        "@capacitor/cli": "^6.0.0",
        "@ionic/cli": "^6.16.3",
        "@types/google.accounts": "0.0.2",
        "@types/lodash": "^4.14.170",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "@vue/cli": "^5.0.8",
        "@vue/cli-plugin-babel": "^5.0.8",
        "@vue/cli-plugin-eslint": "^5.0.8",
        "@vue/cli-plugin-router": "^5.0.8",
        "@vue/cli-plugin-typescript": "^5.0.8",
        "@vue/cli-service": "^5.0.8",
        "@vue/compiler-sfc": "^3.3.4",
        "@vue/eslint-config-airbnb": "^6.0.0",
        "@vue/eslint-config-typescript": "^9.1.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-vue": "^8.0.3",
        "eslint-plugin-vuejs-accessibility": "^1.1.0",
        "node-polyfill-webpack-plugin": "^2.0.1",
        "prettier": "^2.3.1",
        "typescript": "~4.5.5"
    }
}
